views:
  - type: cards
    name: Tabla
    filters:
      and:
        - file.inFolder("Proyectos, ocio/Project Kaizo/Proyect Arcadia/Data/Datos/Personajes")
        - file.ext == "md"
    groupBy:
      property: file.tags
      direction: ASC
    order:
      - file.name
      - file.tags
      - file.embeds
    sort:
      - property: file.name
        direction: ASC
    imageFit: contain
    cardSize: 320
